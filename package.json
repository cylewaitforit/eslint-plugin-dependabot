{
	"name": "eslint-plugin-dependabot",
	"version": "0.0.0",
	"description": "Eslint Plugin to enforce Dependabot best practices",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cylewaitforit/eslint-plugin-dependabot.git"
	},
	"license": "MIT",
	"author": {
		"name": "cylewaitforit",
		"email": "cyle@cylewaitfor.it"
	},
	"type": "module",
	"main": "lib/index.js",
	"files": [
		"LICENSE.md",
		"README.md",
		"lib/",
		"package.json"
	],
	"scripts": {
		"build": "tsdown",
		"format": "prettier .",
		"lint": "eslint . --max-warnings 0",
		"lint:knip": "knip",
		"lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --rules sentences-per-line",
		"lint:packages": "pnpm dedupe --check",
		"lint:spelling": "cspell \"**\" \".github/**/*\"",
		"prepare": "lefthook install",
		"test": "vitest",
		"tsc": "tsc"
	},
	"devDependencies": {
		"@eslint-community/eslint-plugin-eslint-comments": "catalog:",
		"@eslint/js": "catalog:",
		"@release-it/conventional-changelog": "catalog:",
		"@types/eslint-plugin-markdown": "catalog:",
		"@types/node": "catalog:",
		"@vitest/coverage-v8": "catalog:",
		"@vitest/eslint-plugin": "catalog:",
		"console-fail-test": "catalog:",
		"cspell": "catalog:",
		"eslint": "catalog:",
		"eslint-plugin-eslint-plugin": "catalog:",
		"eslint-plugin-jsdoc": "catalog:",
		"eslint-plugin-jsonc": "catalog:",
		"eslint-plugin-markdown": "catalog:",
		"eslint-plugin-n": "catalog:",
		"eslint-plugin-package-json": "catalog:",
		"eslint-plugin-perfectionist": "catalog:",
		"eslint-plugin-pnpm": "catalog:",
		"eslint-plugin-regexp": "catalog:",
		"eslint-plugin-yml": "catalog:",
		"eslint-yaml": "catalog:",
		"knip": "catalog:",
		"lefthook": "catalog:",
		"markdownlint": "catalog:",
		"markdownlint-cli": "catalog:",
		"pkg-pr-new": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-curly": "catalog:",
		"prettier-plugin-packagejson": "catalog:",
		"prettier-plugin-sh": "catalog:",
		"release-it": "catalog:",
		"sentences-per-line": "catalog:",
		"tsdown": "catalog:",
		"typescript": "catalog:",
		"typescript-eslint": "catalog:",
		"vitest": "catalog:",
		"yaml": "catalog:"
	},
	"packageManager": "pnpm@10.4.0",
	"engines": {
		"node": ">=22.0.0"
	},
	"publishConfig": {
		"provenance": true
	}
}
